keybind = super+enter=new_split:auto

keybind = super+left_bracket=goto_split:previous
keybind = super+right_bracket=goto_split:next

keybind = shift+super+enter=toggle_split_zoom
keybind = ctrl+shift+super+right=resize_split:right,10
keybind = ctrl+shift+super+left=resize_split:left,10
keybind = ctrl+shift+super+up=resize_split:up,10
keybind = ctrl+shift+super+down=resize_split:down,10
keybind = ctrl+enter=toggle_fullscreen

keybind = ctrl+shift+t=new_tab
keybind = ctrl+shift+tab=previous_tab
keybind = ctrl+tab=next_tab

font-feature = -calt
font-feature = -liga
font-feature = -dlig

window-decoration = false

gtk-tabs-location = bottom

macos-titlebar-style = tabs

shell-integration = fish
clipboard-paste-protection = false
